<h1>Learned Pieces</h1>

<% @pieces.each do |piece| %>
  <h2>

    <a href="/pieces/<%= piece.id %>">
      Opus. <%= piece.opus %>
       <%= "No. #{piece.number}" if piece.number.nil? == false%></a></h2>
  <p>
    <ul>
      <li> Composer: <%= piece.composer.name %> </li>
      <li> Date of Composition: <%= piece.composition_date %> </li>
      <li> Key Signature: <%= piece.key_signature %> </li>
      <li> Composer's age when published: <%= piece.age_at_time_of_composition %> </li>
      <li> <%= piece.piano%> </li>
       <% if piece.nickname %>
      <li> Nickname: <%= piece.nickname %> </li>
        <% end %>
    </ul>
  </p>
<% end %>
